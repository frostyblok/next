			<%= link_to "NextBlog", root_path, class: 'text-black logo' %>
			<div id="" class="">
				<ul class="d-flex" style="list-style: none;">
					<% if current_user %>
						<li class=""><%= link_to "My Articles", my_articles_path, class:"text-black btn btn-primary list-button mr-2" %></li>
						<li class=""><%= link_to "Account", user_settings_path, class:"text-black btn btn-primary list-button mr-2" %></li>
